{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": [
            "ts-jest",
            {
                "tsconfig": {
                    "module": "commonjs",
                    "moduleResolution": "node",
                    "esModuleInterop": true,
                    "allowSyntheticDefaultImports": true,
                    "resolvePackageJsonExports": false
                }
            }
        ]
    },
    "moduleNameMapper": {
        "^(\\.{1,2}/.*)\\.js$": "$1"
    }
}
